@model GestiuneExamene.Models.Building

@{
    ViewBag.Title = "New";
}

<h2>New</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Building", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Building</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("DenumireCorp", "Cladire:")
            <div class="col-md-10">
                @Html.TextBoxFor(b => b.DenumireCorp, null, new { placeholder = "Introduceti numele cadrului didactic:", @class = "formcontrol" })
                @Html.ValidationMessageFor(b => b.DenumireCorp, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Adresa", "Adresa:")
            <div class="col-md-10">
                @Html.TextBoxFor(b => b.Adresa, null, new { placeholder = "Introduceti prenumele cadrului didactic:", @class = "formcontrol" })
                @Html.ValidationMessageFor(b => b.Adresa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
