@model GestiuneExamene.Models.Faculty
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Faculty"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.FacultyId) <!--camp hidden id -->
    <br />
    @Html.Label("Name", "Denumire facultate:")
    <br />
    @Html.EditorFor(b => b.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Adress", "Adresa:")
    <br />
    @Html.Editor("Adress", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Adress, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}


