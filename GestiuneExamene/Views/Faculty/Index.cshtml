@{
    ViewBag.Title = "Faculties"; } <h2>@ViewBag.Title</h2>
    @foreach (var faculties in ViewBag.Faculties)
    {
        <div class="panel-body">
            @Html.Label("DenumireFacultate", "Denumire:")
            <br /> <p>@faculties.DenumireFacultate</p>
            @Html.Label("AdresaFacultate", "Adresa:")
            <br />
            <p>@faculties.AdresaFacultate</p>
            @using (Html.BeginForm(actionName: "Details", controllerName: "Faculty", method: FormMethod.Get, routeValues: new { id = faculties.IdFacultate }))
            {
                <button class="btn btn-primary">Details</button>
            }
        </div>
    }

    @Html.ActionLink("Adauga Facultate", "New")